<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:id="@+id/repo_card">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_date"
                android:text="Date"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_item"
                android:text="Item Name"
                android:textColor="#443322"
                android:layout_below="@+id/card_date"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:id="@+id/card_desc"
                android:textColor="#8F8787"
                android:layout_below="@+id/card_item"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_amount"
                android:text="5000"
                android:textStyle="bold"
                android:layout_alignRight="@+id/card_item"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />
            <View
                android:background="#BEBCB9"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/card_desc"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>