<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    android:elevation="5dp"
    android:layout_margin="5dp"
    android:id="@+id/income_cardview"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6 July 2019"
                android:layout_margin="5dp"
                android:textColor="@color/date_color"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/date_txt_income"
                />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textStyle="bold"
                android:id="@+id/type_txt_income"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:id="@+id/note_txt_income"
                android:layout_below="@+id/type_txt_income"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="600000"
                android:textColor="@color/date_color"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textStyle="bold"
                android:id="@+id/amount_txt_income"
                />

        </RelativeLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>